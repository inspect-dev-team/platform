<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.platform.dao.regulation.UserRegulationRelDao">

    <resultMap type="com.platform.entity.regulation.UserRegulationRelEntity" id="userRegulationRelMap">
        <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="knowledgeId" column="knowledge_id"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

	<select id="queryObject" resultType="com.platform.entity.regulation.UserRegulationRelEntity">
		select
			`id`,
			`user_id`,
			`knowledge_id`,
			`create_time`
		from user_regulation_rel
		where id = #{id}
	</select>

	<select id="queryList" resultType="com.platform.entity.regulation.UserRegulationRelEntity">
		select
    		`id`,
    		`user_id`,
    		`knowledge_id`,
    		`create_time`
		from user_regulation_rel
		WHERE 1=1
		<if test="name != null and name.trim() != ''">
			AND name LIKE concat('%',#{name},'%')
		</if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from user_regulation_rel
		WHERE 1=1
        <if test="name != null and name.trim() != ''">
            AND name LIKE concat('%',#{name},'%')
        </if>
	</select>
	 
	<insert id="save" parameterType="com.platform.entity.regulation.UserRegulationRelEntity" useGeneratedKeys="true" keyProperty="id">
		insert into user_regulation_rel(
			`user_id`,
			`knowledge_id`,
			`create_time`)
		values(
			#{userId},
			#{knowledgeId},
			#{createTime})
	</insert>
	 
	<update id="update" parameterType="com.platform.entity.regulation.UserRegulationRelEntity">
		update user_regulation_rel 
		<set>
			<if test="userId != null">`user_id` = #{userId}, </if>
			<if test="knowledgeId != null">`knowledge_id` = #{knowledgeId}, </if>
			<if test="createTime != null">`create_time` = #{createTime}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from user_regulation_rel where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from user_regulation_rel where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

	<!-- 查询知识收藏夹 -->
	<select id="selectKnowledgeCollectList" resultType="com.platform.entity.regulation.vo.KnowledgeCollectVo">
		select r.id,r.knowledge_name as name ,r.description as descr,r.url,ur.create_time as createTime
		from user_regulation_rel ur left join regulation r on r.id=ur.knowledge_id
		where ur.user_id = #{userId}
	</select>

	<select id="selectKnowledgeCollectTotal" resultType="java.lang.Integer">
		select count(1)
		from user_regulation_rel ur left join regulation r on r.id=ur.knowledge_id
		where ur.user_id = #{userId}
	</select>

</mapper>