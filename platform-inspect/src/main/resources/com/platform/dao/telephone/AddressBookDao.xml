<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.platform.dao.telephone.AddressBookDao">

    <resultMap type="com.platform.entity.telephone.AddressBookEntity" id="addressBookMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="mobile" column="mobile"/>
        <result property="position" column="position"/>
    </resultMap>

	<select id="queryObject" resultType="com.platform.entity.telephone.AddressBookEntity">
		select
			`id`,
			`name`,
			`mobile`,
			`position`,
			`create_time`
		from address_book
		where id = #{id}
	</select>

	<select id="queryList" resultType="com.platform.entity.telephone.AddressBookEntity">
		select
    		`id`,
    		`name`,
    		`mobile`,
    		`position`,
    		`create_time`
		from address_book
		WHERE 1=1
		<if test="name != null and name.trim() != ''">
			AND name LIKE concat('%',#{name},'%')
		</if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from address_book
		WHERE 1=1
        <if test="name != null and name.trim() != ''">
            AND name LIKE concat('%',#{name},'%')
        </if>
	</select>
	 
	<insert id="save" parameterType="com.platform.entity.telephone.AddressBookEntity" useGeneratedKeys="true" keyProperty="id">
		insert into address_book(
			`name`,
			`mobile`,
			`position`,
			`create_time`)
		values(
			#{name},
			#{mobile},
			#{position},
			#{createTime})
	</insert>
	 
	<update id="update" parameterType="com.platform.entity.telephone.AddressBookEntity">
		update address_book 
		<set>
			<if test="name != null">`name` = #{name}, </if>
			<if test="mobile != null">`mobile` = #{mobile}, </if>
			<if test="position != null">`position` = #{position}, </if>
			<if test="createTime != null">`create_time` = #{createTime}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from address_book where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from address_book where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>