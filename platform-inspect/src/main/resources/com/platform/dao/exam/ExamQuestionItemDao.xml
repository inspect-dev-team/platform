<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.platform.dao.exam.ExamQuestionItemDao">

    <resultMap type="com.platform.entity.exam.ExamQuestionItemEntity" id="examQuestionItemMap">
        <result property="id" column="id"/>
        <result property="questionId" column="question_id"/>
        <result property="item" column="item"/>
    </resultMap>

	<select id="queryObject" resultType="com.platform.entity.exam.ExamQuestionItemEntity">
		select
			`id`,
			`question_id`,
			`item`
		from exam_question_item
		where id = #{id}
	</select>

	<select id="queryList" resultType="com.platform.entity.exam.ExamQuestionItemEntity">
		select
    		`id`,
    		`question_id`,
    		`item`
		from exam_question_item
		WHERE 1=1
		<if test="name != null and name.trim() != ''">
			AND name LIKE concat('%',#{name},'%')
		</if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from exam_question_item
		WHERE 1=1
        <if test="name != null and name.trim() != ''">
            AND name LIKE concat('%',#{name},'%')
        </if>
	</select>
	 
	<insert id="save" parameterType="com.platform.entity.exam.ExamQuestionItemEntity" useGeneratedKeys="true" keyProperty="id">
		insert into exam_question_item(
			`question_id`,
			`item`)
		values(
			#{questionId},
			#{item})
	</insert>
	 
	<update id="update" parameterType="com.platform.entity.exam.ExamQuestionItemEntity">
		update exam_question_item 
		<set>
			<if test="questionId != null">`question_id` = #{questionId}, </if>
			<if test="item != null">`item` = #{item}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from exam_question_item where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from exam_question_item where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>