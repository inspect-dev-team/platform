<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.platform.dao.enterprise.LicenseTypeDao">

    <resultMap type="com.platform.entity.enterprise.LicenseTypeEntity" id="licenseTypeMap">
        <result property="id" column="id"/>
        <result property="licenseType" column="license_type"/>
        <result property="remark" column="remark"/>
        <result property="createTime" column="create_time"/>
        <result property="creator" column="creator"/>
    </resultMap>

	<select id="queryObject" resultType="com.platform.entity.enterprise.LicenseTypeEntity">
		select
			`id`,
			`license_type`,
			`remark`,
			`create_time`,
			`creator`
		from license_type
		where id = #{id}
	</select>

	<select id="queryList" resultType="com.platform.entity.enterprise.LicenseTypeEntity">
		select
    		`id`,
    		`license_type`,
    		`remark`,
    		`create_time`,
    		`creator`
		from license_type
		WHERE 1=1
		<if test="name != null and name.trim() != ''">
			AND license_type LIKE concat('%',#{name},'%')
		</if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from license_type
		WHERE 1=1
        <if test="name != null and name.trim() != ''">
            AND license_type LIKE concat('%',#{name},'%')
        </if>
	</select>
	 
	<insert id="save" parameterType="com.platform.entity.enterprise.LicenseTypeEntity" useGeneratedKeys="true" keyProperty="id">
		insert into license_type(
			`license_type`,
			`remark`,
			`create_time`,
			`creator`)
		values(
			#{licenseType},
			#{remark},
			#{createTime},
			#{creator})
	</insert>
	 
	<update id="update" parameterType="com.platform.entity.enterprise.LicenseTypeEntity">
		update license_type 
		<set>
			<if test="licenseType != null">`license_type` = #{licenseType}, </if>
			<if test="remark != null">`remark` = #{remark}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="creator != null">`creator` = #{creator}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from license_type where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from license_type where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>