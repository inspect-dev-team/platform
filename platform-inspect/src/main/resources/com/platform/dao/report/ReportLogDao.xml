<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.platform.dao.report.ReportLogDao">

    <resultMap type="com.platform.entity.report.ReportLogEntity" id="reportLogMap">
        <result property="id" column="id"/>
        <result property="eventNo" column="event_no"/>
        <result property="result" column="result"/>
        <result property="alarmLocation" column="alarm_location"/>
        <result property="localtionTag" column="localtion_tag"/>
        <result property="deviceType" column="device_type"/>
        <result property="customerId" column="customer_id"/>
        <result property="sendTime" column="send_time"/>
        <result property="alarmFloor" column="alarm_floor"/>
        <result property="installLocal" column="install_local"/>
        <result property="sendText" column="send_text"/>
        <result property="classify" column="classify"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

	<select id="queryObject" resultType="com.platform.entity.report.ReportLogEntity">
		select
			`id`,
			`event_no`,
			`result`,
			`alarm_location`,
			`localtion_tag`,
			`device_type`,
			`customer_id`,
			`send_time`,
			`alarm_floor`,
			`install_local`,
			`send_text`,
			`classify`,
			`create_time`
		from report_log
		where id = #{id}
	</select>

	<select id="queryList" resultType="com.platform.entity.report.ReportLogEntity">
		select
    		`id`,
    		`event_no`,
    		`result`,
    		`alarm_location`,
    		`localtion_tag`,
    		`device_type`,
    		`customer_id`,
    		`send_time`,
    		`alarm_floor`,
    		`install_local`,
    		`send_text`,
    		`classify`,
    		`create_time`
		from report_log
		WHERE 1=1
		<if test="name != null and name.trim() != ''">
			AND name LIKE concat('%',#{name},'%')
		</if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from report_log
		WHERE 1=1
        <if test="name != null and name.trim() != ''">
            AND name LIKE concat('%',#{name},'%')
        </if>
	</select>
	 
	<insert id="save" parameterType="com.platform.entity.report.ReportLogEntity" useGeneratedKeys="true" keyProperty="id">
		insert into report_log(
			`event_no`,
			`result`,
			`alarm_location`,
			`localtion_tag`,
			`device_type`,
			`customer_id`,
			`send_time`,
			`alarm_floor`,
			`install_local`,
			`send_text`,
			`classify`,
			`create_time`)
		values(
			#{eventNo},
			#{result},
			#{alarmLocation},
			#{localtionTag},
			#{deviceType},
			#{customerId},
			#{sendTime},
			#{alarmFloor},
			#{installLocal},
			#{sendText},
			#{classify},
			#{createTime})
	</insert>
	 
	<update id="update" parameterType="com.platform.entity.report.ReportLogEntity">
		update report_log 
		<set>
			<if test="eventNo != null">`event_no` = #{eventNo}, </if>
			<if test="result != null">`result` = #{result}, </if>
			<if test="alarmLocation != null">`alarm_location` = #{alarmLocation}, </if>
			<if test="localtionTag != null">`localtion_tag` = #{localtionTag}, </if>
			<if test="deviceType != null">`device_type` = #{deviceType}, </if>
			<if test="customerId != null">`customer_id` = #{customerId}, </if>
			<if test="sendTime != null">`send_time` = #{sendTime}, </if>
			<if test="alarmFloor != null">`alarm_floor` = #{alarmFloor}, </if>
			<if test="installLocal != null">`install_local` = #{installLocal}, </if>
			<if test="sendText != null">`send_text` = #{sendText}, </if>
			<if test="classify != null">`classify` = #{classify}, </if>
			<if test="createTime != null">`create_time` = #{createTime}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from report_log where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from report_log where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>