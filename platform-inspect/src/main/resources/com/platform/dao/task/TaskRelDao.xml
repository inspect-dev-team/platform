<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.platform.dao.task.TaskRelDao">

    <resultMap type="com.platform.entity.task.TaskRelEntity" id="taskRelMap">
        <result property="id" column="id"/>
        <result property="itId" column="it_id"/>
        <result property="taskId" column="task_id"/>
    </resultMap>

	<select id="queryObject" resultType="com.platform.entity.task.TaskRelEntity">
		select
			`id`,
			`it_id`,
			`task_id`
		from task_rel
		where id = #{id}
	</select>

	<select id="queryList" resultType="com.platform.entity.task.TaskRelEntity">
		select
    		`id`,
    		`it_id`,
    		`task_id`
		from task_rel
		WHERE 1=1
		<if test="name != null and name.trim() != ''">
			AND name LIKE concat('%',#{name},'%')
		</if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from task_rel
		WHERE 1=1
        <if test="name != null and name.trim() != ''">
            AND name LIKE concat('%',#{name},'%')
        </if>
	</select>
	 
	<insert id="save" parameterType="com.platform.entity.task.TaskRelEntity">
		insert into task_rel(
			`it_id`,
			`task_id`)
		values(
			#{itId},
			#{taskId})
	</insert>
	 
	<update id="update" parameterType="com.platform.entity.task.TaskRelEntity">
		update task_rel 
		<set>
			<if test="itId != null">`it_id` = #{itId}, </if>
			<if test="taskId != null">`task_id` = #{taskId}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from task_rel where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from task_rel where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>