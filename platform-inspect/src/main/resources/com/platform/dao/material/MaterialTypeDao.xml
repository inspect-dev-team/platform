<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.platform.dao.material.MaterialTypeDao">

    <resultMap type="com.platform.entity.material.MaterialTypeEntity" id="materialTypeMap">
        <result property="id" column="id"/>
		<result property="enterpriseId" column="enterprise_id"/>
        <result property="name" column="name"/>
        <result property="parentId" column="parent_id"/>
        <result property="remark" column="remark"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
		<result property="parentName" column="parent_name"/>
		<result property="creator" column="creator"/>
		<result property="creatorId" column="creator_id"/>
		<result property="updator" column="updator"/>
		<result property="updatorId" column="updator_id"/>
    </resultMap>

	<select id="queryObject" resultType="com.platform.entity.material.MaterialTypeEntity">
		select
			`id`,
			 enterprise_id,
			`name`,
			`parent_id`,
			`parent_name`,
			`remark`,
			`create_time`,
			`update_time`,
			`creator`,
			`creator_id`,
			`updator`,
			`updator_id`
		from material_type
		where id = #{id}
	</select>

	<select id="queryList" resultType="com.platform.entity.material.MaterialTypeEntity">
		select
    		`id`,
		     enterprise_id,
    		`name`,
    		`parent_id`,
		    `parent_name`,
    		`remark`,
    		`create_time`,
    		`update_time`,
			`creator`,
			`creator_id`,
			`updator`,
			`updator_id`
		from material_type
		WHERE 1=1
		<if test="name != null and name.trim() != ''">
			AND name LIKE concat('%',#{name},'%')
		</if>
		<if test="enterpriseId != null ">
			AND enterprise_id = #{enterpriseId} OR  enterprise_id IS NULL
		</if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>

	<!-- 加载所有物料类型,用于前端选择 -->
	<select id="queryAllMaterialType" resultType="com.platform.vo.TreeVo">
		select id,name,parent_id as pid from material_type order by id
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from material_type
		WHERE 1=1
        <if test="name != null and name.trim() != ''">
            AND name LIKE concat('%',#{name},'%')
        </if>
		<if test="enterpriseId != null ">
			AND enterprise_id = #{enterpriseId} OR  enterprise_id IS NULL
		</if>
	</select>
	 
	<insert id="save" parameterType="com.platform.entity.material.MaterialTypeEntity" useGeneratedKeys="true" keyProperty="id">
		insert into material_type(
		     enterprise_id,
			`name`,
			`parent_id`,
			`parent_name`,
			`remark`,
			`create_time`,
			`update_time`,
			`creator`,
			`creator_id`,
			`updator`,
			`updator_id`)
		values(
		    #{enterpriseId},
			#{name},
			#{parentId},
			#{parentName},
			#{remark},
			#{createTime},
			#{updateTime},
			#{creator},
			#{creatorId},
			#{updator},
			#{updatorId})
	</insert>
	 
	<update id="update" parameterType="com.platform.entity.material.MaterialTypeEntity">
		update material_type 
		<set>
			<if test="name != null">`material_type_name` = #{name}, </if>
			<if test="parentId != null">`parent_id` = #{parentId}, </if>
			<if test="parentName != null">`parent_name` = #{parentName}, </if>
			<if test="remark != null">`remark` = #{remark}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="updateTime != null">`update_time` = #{updateTime}, </if>
			<if test="creator != null">`creator` = #{creator},</if>
			<if test="creatorId != null">`creator_id` = #{creatorId},</if>
			<if test="updatorId != null">`updator_id` = #{updatorId},</if>
			<if test="updator != null">`updator` = #{updator}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from material_type where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from material_type where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

	<!-- 根据设备类型名称查询设备类型 -->
	<select id="queryMaterialTypeByName" parameterType="java.lang.String" resultType="com.platform.entity.material.MaterialTypeEntity">
		SELECT * from material_type t where t.name=#{name}
	</select>

</mapper>