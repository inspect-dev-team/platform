<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.platform.dao.material.MaterialTypeDao">

    <resultMap type="com.platform.entity.material.MaterialTypeEntity" id="materialTypeMap">
        <result property="id" column="id"/>
        <result property="materialTypeName" column="material_type_name"/>
        <result property="parentId" column="parent_id"/>
        <result property="remark" column="remark"/>
        <result property="createTime" column="create_time"/>
        <result property="creator" column="creator"/>
        <result property="updateTime" column="update_time"/>
        <result property="updator" column="updator"/>
    </resultMap>

	<select id="queryObject" resultType="com.platform.entity.material.MaterialTypeEntity">
		select
			`id`,
			`material_type_name`,
			`parent_id`,
			`remark`,
			`create_time`,
			`creator`,
			`update_time`,
			`updator`
		from material_type
		where id = #{id}
	</select>

	<select id="queryList" resultType="com.platform.entity.material.MaterialTypeEntity">
		select
    		`id`,
    		`material_type_name`,
    		`parent_id`,
    		`remark`,
    		`create_time`,
    		`creator`,
    		`update_time`,
    		`updator`
		from material_type
		WHERE 1=1
		<if test="name != null and name.trim() != ''">
			AND name LIKE concat('%',#{name},'%')
		</if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from material_type
		WHERE 1=1
        <if test="name != null and name.trim() != ''">
            AND name LIKE concat('%',#{name},'%')
        </if>
	</select>
	 
	<insert id="save" parameterType="com.platform.entity.material.MaterialTypeEntity" useGeneratedKeys="true" keyProperty="id">
		insert into material_type(
			`material_type_name`,
			`parent_id`,
			`remark`,
			`create_time`,
			`creator`,
			`update_time`,
			`updator`)
		values(
			#{materialTypeName},
			#{parentId},
			#{remark},
			#{createTime},
			#{creator},
			#{updateTime},
			#{updator})
	</insert>
	 
	<update id="update" parameterType="com.platform.entity.material.MaterialTypeEntity">
		update material_type 
		<set>
			<if test="materialTypeName != null">`material_type_name` = #{materialTypeName}, </if>
			<if test="parentId != null">`parent_id` = #{parentId}, </if>
			<if test="remark != null">`remark` = #{remark}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="creator != null">`creator` = #{creator}, </if>
			<if test="updateTime != null">`update_time` = #{updateTime}, </if>
			<if test="updator != null">`updator` = #{updator}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from material_type where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from material_type where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>